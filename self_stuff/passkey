# print(lock_phone(a))

p = "aranya" # our password
v = 1        # locking mechanism for while loop
i = 2        # counter variable for Wrong input loop

while (v == 1):
    q = input("enter the password: ")
    print("")

    if(p == q):
        print("correct!")
        print('')
        v = 0                       # sets the locking mechanism to 0, so while loop wont work

    elif(q == "sumeet"):            # hehe sumeetðŸ‘Œ
        print("hehe suiii")         # entire elif block can be deletedðŸ‘
        print('')

    else:
        print("nonono")
        print('')

        if (i >= 1):            
            print("you have ", i, " chances remaining \n Try again")
            i -= 1                  # i=i-1, removing the possible chances
        else:
            print("Tries are over \n quitting program!")
            v = 0                   # sets the locking mechanism to 0 so code wont work

    
